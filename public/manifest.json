{
    "manifest_version": 3,
    "name": "AnalyGits",
    "version": "1.0.0",
    "description": "Version Control for SAP Analytics Cloud",
    "permissions": [
        "storage",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "icons": {
        "16": "icons/16x16.png",
        "32": "icons/32x32.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup/index.html",
        "default_title": "AnalyGits",
        "default_icon": {
            "16": "icons/16x16.png",
            "32": "icons/32x32.png",
            "48": "icons/48x48.png",
            "128": "icons/128x128.png"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}