{
    "manifest_version": 3,
    "name": "SAP Documentation Tool",
    "version": "1.0.0",
    "description": "Fetch SAP OData metadata and generate documentation.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "src/popup/index.html",
        "default_title": "SAP Docs"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}